@model List<UserListViewModel>

@{
    ViewBag.Title = "List Users";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

@if (Model.Count == 0)
{
    <h4>No data</h4>
}
else
{
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Full Name</th>
            <th>E-mail</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var usr in Model)
        {
            <tr>
                <td><a asp-controller="Account" asp-action="UserDetails" asp-route-id="@usr.Id">@usr.LastName, @usr.FirstName</a></td>
                <td>@usr.Email</td>
            </tr>
        }
        </tbody>
    </table>
}